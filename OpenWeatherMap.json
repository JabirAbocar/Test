            "type": "string"
          },
          {
            "name": "1f13e9718aeb4f867609f6f69ca57329",
            "in": "query",
            "description": "API key for accessing OpenWeatherMap data",
            "required": true,
            "type": "string"
          }
        ],
        "responses": {
          "200": {
            "description": "OK",
            "schema": {
              "type": "object",
              "properties": {
                "coord": {
                  "type": "object",
                  "properties": {
                    "lon": {
                      "type": "number"
                    },
                    "lat": {
                      "type": "number"
                    }
                  }
                },
                "weather": {
                  "type": "array",
                  "items": {
                    "type": "object",
                    "properties": {
                      "id": {
                        "type": "integer"
                      },
                      "main": {
                        "type": "string"
                      },
                      "description": {
                        "type": "string"
                      },
                      "icon": {
                        "type": "string"
                      }
                    }
                  }
                },
                "base": {
                  "type": "string"
                },
                "main": {
                  "type": "object",
                  "properties": {
                    "temp": {
                      "type": "number"
                    },
                    "pressure": {
                      "type": "number"
                    },
                    "humidity": {
                      "type": "number"
                    },
                    "temp_min": {
                      "type": "number"
                    }
                  }
                }
              }
            }
          }
        }
      }
    }
