{
  "swagger": "2.0",
  "info": {
    "title": "OpenWeatherMap API",
    "version": "1.0.0",
    "description": "REST API for accessing weather data from OpenWeatherMap"
  },
  "host": "api.openweathermap.org",
  "basePath": "/data/2.5",
  "schemes": [
    "https"
  ],
  "paths": {
    "/weather": {
      "get": {
        "summary": "Get weather data for a location",
        "parameters": [
          {
            "name": "q",
            "in": "query",
            "description": "City name or zip code",
            "required": true,
            "type": "string"
          },
          {
            "name": "appid",
            "in": "query",
            "description": "API key for accessing OpenWeatherMap",
            "required": true,
            "type": "string"
          }
        ],
        "responses": {
          "200": {
            "description": "Weather data for the specified location",
            "schema": {
              "type": "object",
              "properties": {
                "coord": {
                  "type": "object",
                  "properties": {
                    "lon": {
                      "type": "number"
                    },
                    "lat": {
                      "type": "number"
                    }
                  }
                },
                "weather": {
                  "type": "array",
                  "items": {
                    "type": "object",
                    "properties": {
                      "id": {
                        "type": "integer"
                      },
                      "main": {
                        "type": "string"
                      },
                      "description": {
                        "type": "string"
                      },
                      "icon": {
                        "type": "string"
                      }
                    }
                  }
                },
                "base": {
                  "type": "string"
                },
                "main": {
                  "type": "object",
                  "properties": {
                    "temp": {
                      "type": "number"
                    },
                    "feels_like": {
                      "type": "number"
                    },
                    "temp_min": {
                      "type": "number"
                    },
                    "temp_max": {
                      "type": "number"
                    },
                    "pressure": {
                      "type": "integer"
                    },
                    "humidity": {
                      "type": "integer"
                    }
                  }
                },
                "visibility": {
                  "type": "integer"
                },
                "wind": {
                  "type": "object",
                  "properties": {
                    "speed": {
                      "type": "number"
                    },
                    "deg": {
                      "type": "integer"
                    }
                  }
                },
                "clouds": {
                  "type": "object",
                  "properties": {
                    "all": {
                      "type": "integer"
                    }
                  }
                },
                "dt": {
                  "type": "integer"
                },
                "sys": {
                  "type": "object",
                  "properties": {
                    "type": {
                      "type": "integer"
                    },
                    "id": {
                      "type": "integer"
                    },
                    "country": {
                      "type": "string"
                    },
                    "sunrise": {
                      "type": "integer"
                    },
                    "sunset": {
                      "type": "integer"
                    }
                  }
                },
                "timezone": {
                  "type": "integer"
                },
                "id": {
                  "type": "integer"
                },
                "name": {
                  "type": "string"
                },
                "cod": {
                  "type": "integer"
                }
              }
            }
          }
        }
      }
    }
  }
}
